#include <16F877a.h>

#FUSES XT
#use delay(clock=4MHz)
#use I2C(master, sda=PIN_c4, scl=PIN_c3, slow)

#include "MPU6050.C"

signed int8 A_data[6];
signed int16 Xa=0,Ya=0,Za=0;

void main()
{
   set_tris_b(0x00);
   set_tris_d(0x00);
   
   delay_ms(2);
   
   mpu6050_init();
    
   while(1)
   {
      A_data[0]=mpu6050_read(0x3B); //X eksen(LSB) ilk biti okunuyor
      A_data[1]=mpu6050_read(0x3C); //X eksen(MSB) son biti okunuyor
      A_data[2]=mpu6050_read(0x3D); //Y eksen(LSB) ilk biti okunuyor
      A_data[3]=mpu6050_read(0x3E); //Y eksen(MSB) son biti okunuyor
        
      Xa=make16(A_data[0],A_data[1]);
      Ya=make16(A_data[2],A_data[3]);


      
      /* ############################################################################################################### */
      // X_ekseni olasiliklari
      
      
      if (Xa>=-17000 && Xa<=-11000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b11111100);
         output_d(0b00011000);
         delay_ms(10);
      }
   
      if (Xa>=-11000 && Xa<=-6000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b11111001);
         output_d(0b00011000);
         delay_ms(10);
      }
   
      if (Xa>=-6000 && Xa<=-2000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b11110011);
         output_d(0b00011000);
         delay_ms(10);
      }
   
      if (Xa>=-2000 && Xa<=2000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b11100111);
         output_d(0b00011000);
         delay_ms(10);
      }
      
      if (Xa>=2000 && Xa<=6000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b11001111);
         output_d(0b00011000);
         delay_ms(10);
      }
      
      if (Xa>=6000 && Xa<=11000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b10011111);
         output_d(0b00011000);
         delay_ms(10);
      }
      
      if (Xa>=11000 && Xa<=17000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b00111111);
         output_d(0b00011000);      
         delay_ms(10);
      }
      
            
      /* ############################################################################################################### */
      
      /* ############################################################################################################### */
      // Y_ekseni olasiliklari
      
      
      if (Ya>=-17000 && Ya<=-11000 && Xa>=-500 && Xa<=500) 
      {
         output_b(0b11111100);
         output_d(0b00011000);
         delay_ms(10);
      }
   
      if (Ya>=-11000 && Ya<=-6000 && Xa>=-500 && Xa<=500) 
      {
         output_b(0b11111001);
         output_d(0b00011000);
         delay_ms(10);
      }
   
      if (Ya>=-6000 && Ya<=-2000 && Xa>=-500 && Xa<=500) 
      {
         output_b(0b11110011);
         output_d(0b00011000);
         delay_ms(10);
      }
   
      if (Xa>=-2000 && Xa<=2000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b11100111);
         output_d(0b00011000);
         delay_ms(10);
      }
      
      if (Xa>=2000 && Xa<=6000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b11001111);
         output_d(0b00011000);
         delay_ms(10);
      }
      
      if (Xa>=6000 && Xa<=11000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b10011111);
         output_d(0b00011000);
         delay_ms(10);
      }
      
      if (Xa>=11000 && Xa<=17000 && Ya>=-500 && Ya<=500) 
      {
         output_b(0b00111111);
         output_d(0b00011000);      
         delay_ms(10);
      }
      
            
      /* ############################################################################################################### */
      
      delay_ms(2);
   }
   
}
   



